  "fields": [
    {
      "name": "client_company",
      "label": "Société mandante",
      "type": "text",
      "required": true
    },
    {
      "name": "client_representative",
      "label": "Représentant légal",
      "type": "text",
      "required": true
    },
    {
      "name": "client_address",
      "label": "Adresse du mandant",
      "type": "text",
      "required": true
    },
    {
      "name": "advisor_entity",
      "label": "Conseiller M&A",
      "type": "text",
      "required": true,
      "default": "Alecia Conseil"
