    {
      "name": "acquisition_criteria",
      "label": "Critères de recherche (secteur, taille, géographie)",
      "type": "text",
      "required": true
    },
    {
      "name": "budget_range",
      "label": "Enveloppe budgétaire indicative (€)",
      "type": "text"
    },
    {
      "name": "success_fee_percent",
