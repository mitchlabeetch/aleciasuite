{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["pieces/*/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "pieces/*/dist"]
}
