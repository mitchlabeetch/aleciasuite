{
  "kind": "collectionType",
  "collectionName": "transactions",
  "info": {
    "singularName": "transaction",
    "pluralName": "transactions",
    "displayName": "Transaction",
    "description": "M&A transactions and operations showcase"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "type": {
      "type": "enumeration",
      "enum": ["acquisition", "cession", "levee_de_fonds", "restructuring"],
      "required": true,
      "default": "acquisition"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "year": {
      "type": "integer",
      "required": true
    },
    "client_name": {
      "type": "string",
      "required": true
    },
    "client_logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "acquirer_name": {
      "type": "string"
    },
    "acquirer_logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "advisor_role": {
      "type": "string",
      "required": true,
      "default": "Sell-side"
    },
    "sector": {
      "type": "string",
      "required": true
    },
    "region": {
      "type": "string"
    },
    "deal_value": {
      "type": "string"
    },
    "deal_size": {
      "type": "string"
    },
    "is_confidential": {
      "type": "boolean",
      "default": false
    },
    "is_client_confidential": {
      "type": "boolean",
      "default": false
    },
    "is_acquirer_confidential": {
      "type": "boolean",
      "default": false
    },
    "is_prior_experience": {
      "type": "boolean",
      "default": false
    },
    "is_case_study": {
      "type": "boolean",
      "default": false
    },
    "context": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "intervention": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "result": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "testimonial_text": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "testimonial_author": {
      "type": "string"
    },
    "key_metrics": {
      "type": "json"
    },
    "display_order": {
      "type": "integer",
      "default": 0,
      "required": true
    }
  }
}
