{
  "kind": "collectionType",
  "collectionName": "team_members",
  "info": {
    "singularName": "team-member",
    "pluralName": "team-members",
    "displayName": "Team Member",
    "description": "Team members for the About page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "full_name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "full_name",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "bio": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "bio_fr": {
      "type": "richtext"
    },
    "bio_en": {
      "type": "richtext"
    },
    "passion": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "quote": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "email": {
      "type": "email"
    },
    "linkedin_url": {
      "type": "string"
    },
    "sectors_expertise": {
      "type": "json"
    },
    "transaction_slugs": {
      "type": "json",
      "description": "Array of transaction slugs related to this team member"
    },
    "display_order": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "blog_posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::blog-post.blog-post",
      "mappedBy": "author"
    }
  }
}
